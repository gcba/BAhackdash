extends layout

block content

  .row-fluid
    .span3.profile.well.offset4
      .well-content
        h3 Perfil
        
        form.form-horizontal
          .control-group
            img(class="avatar", src=user_profile.picture)
          .control-group
            span #{user_profile.name}
          .control-group
            span #{user_profile.email}
          .control-group
            span #{user_profile.bio}
