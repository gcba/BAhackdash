extends layout

block content

	.row-fluid
		.span3.profile.well.offset4
			.well-content
				h3 Edit√° tu Perfil

				if(errors.length)
					p An error ocurred:
					each err in errors
						p(style="margin-left:20px") #{err}

				form.form-horizontal(method="POST", action="/users/" + user.id)
					.control-group
						img(class="avatar", src=user.picture)
					.control-group
						input(name="name", type='text', placeholder='Nombre', value=user.name)
					.control-group
						input(name="email", type='text', placeholder='Email', value=user.email)
					.control-group
						textarea(name="bio", placeholder='Algo sobre vos') #{user.bio}
					.control-group
						input.btn.btn-primary(type='submit', value="Guardar")